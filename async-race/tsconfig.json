{
    "compilerOptions": {
      "target": "es2021",                                  
      "module": "es2015",
      "moduleResolution": "node",                               
      "esModuleInterop": true,                             
      "forceConsistentCasingInFileNames": true,         
      "strict": true,                                      
      "noImplicitAny": true,                           
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      }                         
    },
    "include": ["**/*.ts"],
  }